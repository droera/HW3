import java.util.Scanner;

public class Task3 {
    public static void main (String[]args) {

        Scanner scan = new Scanner(System.in);
        System.out.println("Let's check if you're eligible for a scholarship. What is your gpa? ");
        double gpa = scan.nextDouble();

        System.out.println("How many credits have you completed? ");
        int credits = scan.nextInt();

        System.out.println("Are you on the honors list? ");
        boolean honors = scan.nextBoolean();

        if ((gpa >= 3.5) && (credits >= 30 || honors == true))
            System.out.println("Eligible");
        else
            System.out.println("Not eligible");

    }
}
